{
  "manifest_version": 3,
  "name": "WhatsApp Number Verifier",
  "version": "1.0",
  "description": "Verify WhatsApp numbers from Excel files",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "WhatsApp Verifier"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "verifier.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}